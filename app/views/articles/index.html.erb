
<h1 id="header">Welcome to BOX</h1>
<div>

  <table>

    <thead>
      <tr>
        <td>Title</td>
        <td>Details</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |a| %>
        <tr>
          <td><%= a.title %></td>
          <td><%= a.text %></td>
          <td><%= link_to "Show article", article_path(a), class: "links" %></td>
          <td><%= link_to "Edit article", edit_article_path(a), class: "links" %></td>
          <td><%= link_to "Delete article", article_path(a), method: :delete, data: { confirm: "Are you sure?" }, class: "links" %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div><br><br>
<div class="nav_div">
  <%= link_to "Create New Article", new_article_path, class: "nav_links" %>
</div>